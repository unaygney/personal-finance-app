generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Theme {
  GREEN
  YELLOW
  CYAN
  NAVY
  RED
  PURPLE
  TURQUOISE
  BROWN
  MAGENTA
  BLUE
  GREY
  ARMY
  PINK
  YELLOWGREEN
  ORANGE
}

model User {
  id       String @id @unique @default(uuid())
  email    String @unique
  name     String
  password String
  pots     Pot[]

  @@index([email, id])
}

model Pot {
  id     Int    @id @default(autoincrement())
  name   String
  target Float
  total  Float
  theme  Theme
  userId String
  user   User   @relation(fields: [userId], references: [id])
}
